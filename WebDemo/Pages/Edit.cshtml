@page
@model EditModel
@{
    ViewData["Title"] = "Edit (w/ Tag Helper)";
}

<h3>@ViewData["Title"]</h3>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger alert-dismissible" role="alert">
        <button data-toggle="tooltip" title="Dismiss" type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <b>Validation Errors - @DateTime.Now</b>
        @Html.ValidationSummary(false)
    </div>
}

<form autocomplete="off" method="post">
    <div class="row form-horizontal">
        <vh-form-edit asp-for="@Model.Invoice.Name" bs-Col="@VhCol.md6"></vh-form-edit>
        <vh-form-edit asp-for="@Model.Invoice.StoreBranch" bs-Col="@VhCol.md6"></vh-form-edit>
        @* Amount is Computed - Display *@
        <vh-form-display asp-for="@Model.Invoice.Amount" bs-Col="@VhCol.md3"></vh-form-display>
        <vh-form-edit asp-for="@Model.Invoice.Tax" bs-Col="@VhCol.md3"></vh-form-edit>
        <vh-form-edit asp-for="@Model.Invoice.InvoiceStatus" bs-Col="@VhCol.md3"></vh-form-edit>
        <vh-form-edit asp-for="@Model.Invoice.PaymentOptions" bs-Col="@VhCol.md3"></vh-form-edit>
        <vh-form-edit asp-for="@Model.Invoice.IsPaid" bs-Col="@VhCol.md3"></vh-form-edit>
        <vh-form-edit asp-for="@Model.Invoice.IsOverDue" bs-Col="@VhCol.md3"></vh-form-edit>
    </div>

    <hr class="hrline" />

    <div class="row form-horizontal">
        <div class="@VhClass.DefaultWrapperClass">

            <input type="submit" class="btn btn-success" />

            &nbsp;
            <a asp-page="/Index" asp-area="" asp-route-id="" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>

<partial name="Common" model="@Model" view-data="ViewData" />